
virt-install \
  --name tst \
  --memory 1024 \
  --vcpus 1 \
  --disk CentOS-7-x86_64-GenericCloud-1907.qcow2c,device=disk \
  --os-type Linux \
  --os-variant centos7.0 \
  --virt-type kvm \
  --graphics none \
  --network default \
  --import

